{
  "name": "contracts-ui",
  "version": "2.0.0",
  "description": "Substrate Contracts UI",
  "private": true,
  "type": "module",
  "homepage": "https://contracts-ui.substrate.io",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "yarn eslint --fix .",
    "format": "yarn prettier --write .",
    "clean": "rm -rf dist",
    "test": "yarn cypress run",
    "deep-clean": "yarn clean && rm -rf node_modules",
    "regenerate": "yarn deep-clean && yarn && yarn start",
    "postinstall": "husky install"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": "src",
    "reporter": [
      "html",
      "text"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^1.0.6",
    "@polkadot/api": "10.1.3",
    "@polkadot/api-contract": "10.1.3",
    "@polkadot/extension-dapp": "^0.45.2",
    "@polkadot/ui-keyring": "^3.0.2",
    "@polkadot/ui-shared": "^3.0.2",
    "big.js": "^6.2.1",
    "buffer": "^6.0.3",
    "copy-to-clipboard": "^3.3.3",
    "date-fns": "^2.29.3",
    "dexie": "^3.2.2",
    "dexie-react-hooks": "1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^8.0.5",
    "react-router": "^6.9.0",
    "react-router-dom": "^6.9.0",
    "react-select": "^5.7.0",
    "react-tooltip": "^5.10.0",
    "remark-gfm": "^3.0.1",
    "tailwind-merge": "^1.10.0",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nabla/vite-plugin-eslint": "^1.5.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/big.js": "^6.1.6",
    "@types/node": "^18.15.3",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "cypress": "^12.8.1",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "istanbul-lib-coverage": "^3.2.0",
    "lint-staged": ">=13.2.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.4",
    "source-map-support": "^0.5.21",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vite-tsconfig-paths": "^4.0.7"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "lint-staged": {
    "*.{js,cjs,ts,tsx,css,md,json}": "yarn prettier --write"
  },
  "resolutions": {
    "minimist": "npm:minimist@^1.2.6",
    "node-forge": "npm:node-forge@^1.3.0"
  },
  "packageManager": "yarn@3.1.1"
}
